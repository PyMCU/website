---
import pymcuLogo from '~/assets/images/pymcu-logo.png';
import favIcon from '~/assets/favicons/favicon.ico';
import favIconSvg from '~/assets/favicons/favicon.svg';
import { getImage } from 'astro:assets';

// Generate optimized favicon sizes
const favicon32 = await getImage({
  src: pymcuLogo,
  width: 32,
  height: 32,
  format: 'png',
});

const favicon16 = await getImage({
  src: pymcuLogo,
  width: 16,
  height: 16,
  format: 'png',
});

const appleIcon = await getImage({
  src: pymcuLogo,
  width: 180,
  height: 180,
  format: 'png',
});
---

<!-- PyMCU Logo as main favicon - optimized sizes -->
<link rel="icon" type="image/png" sizes="32x32" href={favicon32.src} />
<link rel="icon" type="image/png" sizes="16x16" href={favicon16.src} />
<link rel="apple-touch-icon" sizes="180x180" href={appleIcon.src} />

<!-- Fallback favicons -->
<link rel="shortcut icon" href={favIcon} />
<link rel="mask-icon" href={favIconSvg.src} color="#0161EF" />
