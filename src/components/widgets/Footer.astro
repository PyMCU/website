---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <!-- Simplified compact footer layout -->
    <div class="py-6 md:py-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <!-- Left side: Brand and secondary links -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
          <div>
            <a class="inline-block font-bold text-xl" href={getHomePermalink()}>{SITE?.name}</a>
          </div>
          <div class="text-sm text-muted flex flex-wrap gap-1">
            {
              secondaryLinks.map(({ text, href }, index) => (
                <>
                  {index !== 0 ? ' · ' : ''}
                  <a
                    class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
                    href={href}
                    set:html={text}
                  />
                </>
              ))
            }
          </div>
        </div>

        <!-- Right side: Social links -->
        {
          socialLinks?.length ? (
            <ul class="flex -ml-2 md:ml-0">
              {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                <li>
                  <a
                    class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                    aria-label={ariaLabel}
                    href={href}
                  >
                    {icon && <Icon name={icon} class="w-5 h-5" />}
                    <Fragment set:html={text} />
                  </a>
                </li>
              ))}
            </ul>
          ) : null
        }
      </div>

      <!-- Copyright and credits section -->
      <div class="mt-6 pt-6 border-t border-gray-200 dark:border-slate-700">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 text-xs text-gray-500 dark:text-gray-400">
          <div>
            © {new Date().getFullYear()} {SITE?.name}. All rights reserved.
          </div>
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-4">
            <span>Built with <a href="https://astro.build" class="hover:text-gray-700 dark:hover:text-gray-300 underline" target="_blank" rel="noopener">Astro</a></span>
            <span>Template by <a href="https://github.com/onwidget/astrowind" class="hover:text-gray-700 dark:hover:text-gray-300 underline" target="_blank" rel="noopener">AstroWind</a></span>
          </div>
        </div>
        {footNote && (
          <div class="mt-2 text-sm text-muted">
            <Fragment set:html={footNote} />
          </div>
        )}
      </div>
    </div>
  </div>
</footer>
